<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<!-- DODATO: isti connection string kao u klijentu -->
	<connectionStrings>
		<add name="SensorDbContext"
			 connectionString="Data Source=(localdb)\MSSQLLocalDB;Initial Catalog=TemperatureConsistencyDb;Integrated Security=True;MultipleActiveResultSets=True"
			 providerName="System.Data.SqlClient" />
	</connectionStrings>

	<system.serviceModel>
		<services>
			<service name="SensorService.Services.SensorService">
				<endpoint address="" binding="basicHttpBinding" contract="SensorService.Contracts.ISensorService" />
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/SensorService/" />
					</baseAddresses>
				</host>
			</service>

			<!-- ovaj drugi service čvor ti realno ne treba, ali može i da ostane;
           da ne komplikujemo, možeš ga za sada ostaviti -->
			<service name="SensorService.SensorService">
				<endpoint address="" binding="basicHttpBinding" contract="SensorService.ISensorService">
					<identity>
						<dns value="localhost" />
					</identity>
				</endpoint>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/Design_Time_Addresses/SensorService/SensorService/" />
					</baseAddresses>
				</host>
			</service>
		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior>
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>
